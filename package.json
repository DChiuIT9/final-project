    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.1.2",
    "crypto-js": "^3.1.9-1",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.16",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-number-format": "^4.3.1",
    "react-router-dom": "^5.1.2"
  }
